{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    {{ form_start(searchForm) }}
        {{ form_widget(searchForm) }}
        <button>Rechercher</button>
    {{ form_end(searchForm) }}

    <div class='searchcontainer'>
        <h2 class='h2search'>Résultat Recherche</h2>
        <p>Sélectionnez un profil :</p>   
            {% for user in users %}
                <div class='player'>
                    <div class='photo'>image</div>
                    <div class='pseudo'>{{user.pseudo}}</div>
                    <div class='sex'>{{user.sex}}</div>
                    <div class='user'>{{user.level}}</div>
                </div>
            {% endfor %}
    </div>
{% endblock %}
