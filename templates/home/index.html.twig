<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <title>{% block title %}Welcome{% endblock %}</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

{% block body %}
    <div class="homepageLogin">
        {% if app.user %}
            <div class="containerAuthButtons">
                <button class="submitConnexion" type="submit"><a href="{{ path('user_index') }}">Entrer</a></button>
                <button class="submitConnexion" type="submit"><a href="{{ path('app_logout') }}">Deconnexion</a></button>
            </div>
        {% else %}
            <div class="containerAuthButtons">
                <button class="submitConnexion" type="submit"><a href="{{ path('app_login') }}">S'indentifier</a></button>
                <button class="submitRegister" type="submit"><a href="{{ path('app_register') }}">S'inscrire</a></button>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
