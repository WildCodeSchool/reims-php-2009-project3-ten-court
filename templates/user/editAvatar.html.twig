{% extends 'base.html.twig' %}

{% block title %}Modification Avatar • TenCourt{% endblock %}

{% block body %}
    <div class="myProfileAvatarEdit">
    {% if user.avatar %}
		<img class="myProfilePicture  userPictureProfileShow" src="{{'/uploads/' ~ user.avatar }}"/>
        <a href="{{ path('user_delete_avatar', {'slug': user.slug}) }}">Supprimer</a>
    {% else %}
        <img class="myProfilePicture" src="{{ asset('build/images/profileDefault/anonymeAvatar.png') }}"/>
    {% endif %}
	</div>
    {{ include('user/_avatarForm.html.twig', {'button_label': 'Mettre à jour'}) }}

