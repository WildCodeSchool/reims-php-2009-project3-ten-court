{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}

	<h1 class="h1-profil-user">Mon compte</h1>

	<table class="user-profil">
		<tbody>
			<tr>
				<th>Prénom:</th>
				<td>{{ user.pseudo }}</td>
			</tr>
			<tr>
				<th>Date d'anniversaire</th>
				<td>{{ user.birthdate|date('d-m-Y') }}</td>
			</tr>
			<tr>
				<th>Email:</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Numéro de téléphone:
				</th>
				<td>{{ user.phone }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ user.city }}</td>
			</tr>
		</tbody>
	</table>

	<div class="edit-delete-section">
		<a class="disconnect-profil" href = "{{ path('app_logout') }}">Déconnection</a>
		<a class="edit-profil" href="{{ path('user_edit', {'id': user.id}) }}">Modifier le profil</a>
		{{ include('user/_delete_form.html.twig') }}
	</div>


{% endblock %}