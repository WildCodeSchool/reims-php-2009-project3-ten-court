<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <title>{% block title %}Inscription â€¢ Tencourt{% endblock %}</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
        <div class="subscriptionPage">
            <div class="subscriptionForm">
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                <h1 class="subscriptionTitleForm">Inscription</h1>
                {{ form_start(registrationForm) }}
                <div class="containerSubscriptionForm">
                    <div class="registrationItemForm">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="registrationItemForm">
                        {{ form_row(registrationForm.plainPassword) }} 
                    </div>
                    <div class="registrationItemForm">
                        {{ form_row(registrationForm.pseudo) }}
                    </div>
                    <div class="registrationItemForm">
                        {{ form_row(registrationForm.sex) }}
                    </div>
                    <div class="registrationItemForm">
                        {{ form_row(registrationForm.level) }}
                    </div>
                    <div class="registrationItemForm">
                        {{ form_row(registrationForm.city) }}
                    </div>
                    <div class="registrationBirtdateForm">
                        {{ form_row(registrationForm.birthdate) }}
                    </div>
                    <div class="registrationAgreeTermsForm">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <div class="registrationItemForm">
                        {{ form_row(registrationForm.save) }}
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
            <a class="subscriptionBackButton" href="{{ path('home') }}">Retour</a>
        </div>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>

