<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <title>{% block title %}Register{% endblock %}</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        {% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
        <h1>Inscription</h1>
        {{ form_start(registrationForm) }}
        
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.sex) }}
            {{ form_row(registrationForm.level) }}
            {{ form_row(registrationForm.city) }}
            {{ form_row(registrationForm.birthdate) }}
            {{ form_row(registrationForm.agreeTerms) }}
            {# <button type="submit" class="btn">Register</button> #}
        {{ form_end(registrationForm) }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>

